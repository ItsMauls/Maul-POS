FROM node:18-alpine as builder

# Install OpenSSL and other dependencies
RUN apk add --no-cache libc6-compat openssl

WORKDIR /app/apps/sales-service

# Copy package files
COPY apps/sales-service/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the sales service files
COPY apps/sales-service .

# Build the application
RUN npm run build

# Production stage
FROM node:18-alpine

# Install OpenSSL and other dependencies
RUN apk add --no-cache libc6-compat openssl

WORKDIR /app/apps/sales-service

# Copy package files
COPY apps/sales-service/package*.json ./

# Install production dependencies only
RUN npm install --production

# Copy built files from builder
COPY --from=builder /app/apps/sales-service/dist ./dist
COPY --from=builder /app/apps/sales-service/node_modules/.prisma ./node_modules/.prisma

# Set environment variables
ENV NODE_ENV=staging
ENV PORT=3005

# Start the application
CMD ["npm", "start"]

EXPOSE 3005