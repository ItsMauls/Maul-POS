{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,    
      "paths": {
        "@shared-middleware": ["./path/to/shared-middleware"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"],
      "typeRoots": ["./node_modules/@types"],
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": ["src/**/*.ts"]
}
  