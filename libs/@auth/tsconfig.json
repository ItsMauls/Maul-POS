{
  "compilerOptions": {
    "rootDir": "../..",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@auth-service/*": ["../../apps/auth-service/src/*"]
    },
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "ms"]
  },
  "include": [
    "src/**/*",
    "../../apps/auth-service/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}