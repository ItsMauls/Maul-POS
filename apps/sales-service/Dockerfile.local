FROM node:18-alpine

# Install OpenSSL and other dependencies
RUN apk add --no-cache libc6-compat openssl

WORKDIR /app/apps/sales-service

# Copy package files
COPY apps/sales-service/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the sales service files
COPY apps/sales-service .

# Build TypeScript
RUN npm run build

# Expose port
EXPOSE 3005

# Start in development mode
CMD ["npm", "run", "dev"]